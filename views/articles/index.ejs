<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">


</head>

<body>



    <a href="/dreams/new" class="btn btn-primary btn-lg mb-4">Save New Dreams</a>
    <a href="/journal/" class="btn btn-primary btn-lg mb-4">Jokes</a>
    <a href="/articles/new" class="btn btn-primary btn-lg mb-4">Make New Article</a>


    <div class="container">
        <h1 class="mb-4">My articles list:</h1>
        <div class="container">
            <% articles.forEach(element=> { %>
                <div class="card mt-4">
                    <div class="card-body">

                        <h4 class="card-title">
                            <%= element.title %>
                        </h4>

                        <p class="card-subtitle mb-2">
                            <%= element.date %>
                        </p>

                        <div class="card-text mb-2">
                            <%= element.description %>
                        </div>


                        <form action="/articles/<%= element.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete Article</button>

                        </form>

                        <br>
                        <form action="/articles/edit/<%= element.id %>?_method=PUT" method="POST">
                            <input type="text" name="updateTitle">
                            <input type="text" name="updateDate">
                            <input type="text" name="updateDescription">
                            <button type="submit" class="btn btn-danger">Edit Article</button>



                        </form>




                    </div>



                </div>

                <% }) %>
        </div>

    </div>

</body>

</html>