<h1>Create an article</h1>

    <form action="/articles" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input required type="text" id="title" name="title" class="form-control">
        </div>
        <br>
        <div class="form-group mb-2">
            <label for="date">Date</label>
            <input required type="text" id="date" name="date">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea required name="description" id="description" cols="30" rows="10" class="form-control"></textarea>

        </div>
        <br>
        <input type="hidden" name="userId">

        <button type="submit" class="btn btn-primary">Save Article</button>
        <a href="/articles/new" class="btn btn-secondary">Cancel</a>





    </form>









